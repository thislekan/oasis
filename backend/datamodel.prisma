type Admin {
  id: ID! @id
  name: String!
  role: UserRole! @default(value: ADMIN)
  email: String! @unique
  password: String!
}

type Lecturer {
  id: ID! @id
  name: String!
  role: UserRole! @default(value: LECTURER)
  courses: [Course]
  email: String! @unique
  password: String!
}

type Student {
  id: ID! @id
  name: String!
  email: String! @unique
  regNo: String! @unique
  gender: String
  department: Department @relation(onDelete: CASCADE)
  faculty: Faculty @relation(onDelete: CASCADE)
  courses: [Course]
  level: String
  phone: String
  address: String
  image: String
  role: UserRole! @default(value: STUDENT)
  history: [CourseHistory]
  graduated: Boolean @default(value: false)
  password: String!
}

type Course {
  id: ID! @id
  name: String! @unique
  department: Department!
  creditUnit: Int!
  students: [Student]
  description: String!
  level: String!
  semester: Semester!
  lecturer: Lecturer
}

type Faculty {
  id: ID! @id
  name: String! @unique
  departments: [Department!]!
}

type Department {
  id: ID! @id
  name: String! @unique
  faculty: Faculty!
  courses: [Course!]!
  students: [Student!]!
}

type Session {
  id: ID! @id
  year: String!
  students: [Student]!
  courseHistory: [CourseHistory]!
}

type CourseHistory {
  id: ID! @id
  students: [Student]!
  session: [Session]!
  course: [Course]!
}

type Result {
  id: ID! @id
  students: [Student]
  grade: Grade!
  cleared: Boolean!
  course: [Course]
}

enum UserRole {
  ADMIN
  STUDENT
  LECTURER
  OTHERS
}

enum Semester {
  FIRST_SEMESTER
  SECOND_SEMESTER
}

enum Grade {
  A
  B
  C
  D
  E
  F
}